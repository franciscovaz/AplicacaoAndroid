<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="francisco.com.projeto.Registo.QuestionsAfterRegisto">

    <LinearLayout
        android:layout_width="354dp"
        android:layout_height="462dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="24dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qual a duração do seu último ciclo menstrual?"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/spinnerCiclo"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="5dp"
            android:hint="Normalmente 28 dias"
            android:textColorHint="#ff4081"
            />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:text="Qual a duração da sua última menstruação?"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/spinnerDuracao"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="5dp"
            android:hint="Normalmente ocorre de 4 a 7 dias"
            android:textColorHint="#ff4081" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data de início da sua última menstruação?"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/etDataInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="AAAA-MM-DD"
            android:inputType="date" />



        <Button
            android:id="@+id/btnDadosQuestoes"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/login_btn"
            android:gravity="center"
            android:text="Inserir Dados"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
