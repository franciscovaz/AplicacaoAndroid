<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorAccent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="francisco.com.projeto.Registo.RegistoActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingTop="30dp"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="53dp">

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/spinnerTipoUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tipo de Usuário" />

        <EditText
            android:id="@+id/et_email_registar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/email_input"
            android:ems="10"
            android:hint="EMAIL"
            android:inputType="textWebEmailAddress"

            android:paddingLeft="40dp"
            android:selectAllOnFocus="false"
            android:textColorHighlight="@android:color/background_dark"
            android:textColorHint="@android:color/background_dark"
            android:textSize="14dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp" />

        <EditText
            android:id="@+id/et_nome"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/username"
            android:ems="10"
            android:hint="NOME"
            android:inputType="textPersonName"
            android:paddingLeft="40dp"
            android:textColor="@android:color/background_dark"
            android:textColorHint="@android:color/background_dark"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/et_telemovel"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/telemovel"
            android:ems="10"
            android:hint="TELEMÓVEL"
            android:paddingLeft="40dp"
            android:textColor="@android:color/background_dark"
            android:textColorHint="@android:color/background_dark"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/et_dataNascimento_registar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/et_password_registar"
            android:layout_marginTop="10dp"
            android:background="@drawable/username_input"
            android:ems="10"
            android:hint="AAAA-MM-DD   Data de Nascimento"
            android:paddingLeft="40dp"
            android:textColor="@android:color/background_dark"
            android:textColorHint="@android:color/background_dark"
            android:textSize="14dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="248dp" />


        <EditText
            android:id="@+id/et_password_registar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/email"
            android:layout_marginTop="10dp"
            android:background="@drawable/password_input"
            android:ems="10"
            android:hint="PASSWORD"
            android:inputType="textPassword"
            android:paddingLeft="40dp"
            android:textColor="@android:color/background_dark"
            android:textColorHint="@android:color/background_dark"
            android:textSize="14dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="248dp" />

        <Button
            android:id="@+id/btnregistar_Mesmo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnlogin"
            android:layout_marginTop="50dp"
            android:background="@drawable/login_btn"
            android:gravity="center"
            android:text="REGISTAR"
            android:textColor="#ffffff"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="254dp" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
